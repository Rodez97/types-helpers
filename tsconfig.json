{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["es2017", "es7", "es6", "dom", "ESNext", "ES2020"],
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["dist/**/*"]
}
